/* pages/predictionResult/predictionResult.wxss */
page {
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;
}

.rootView {
  /* background-color: #f2f2f2; */
  width: 100%;
  overflow-y: scroll; 
}

.headView {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.headTitle {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.imgView {
  width: 48rpx;
  height: 48rpx;
  margin-right: 48rpx;
  margin-bottom: 48rpx;
  justify-content: center;
  align-items: center;
}

.imgTitle {
  height: 48rpx;
  line-height: 48rpx;
  justify-content: center;
  align-items: center;
  color: #85dbd0;
}

.avatarView {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.resultView {
  width: 98%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 48rpx;
  font-size: 14px;
  text-align:justify;
}

.resultTitle {
  color: #c1c1c1;
}

.resultName {
  color: #85dbd0;
}

.tag {
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.tagLeft {
  display: flex;
  flex-direction: row;
  margin-right: 24rpx;
}

.tagRight {
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
}

.tagValue {
  color: #c1c1c1;
  font-size: 11px;
}

.tagTitle {
  color: #85dbd0;
  font-size: 11px;
}

.conclusionView {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 48rpx;
  font-size: 14px;
  text-align:justify;
}

.matchView {
  width: 98%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 48rpx;
  font-size: 14px;
  text-align:justify;
}

.userView {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  text-align:justify;
}

.userItem {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  /* justify-content: center; */
  font-size: 14px;
  margin-bottom: 14rpx;
  padding: 20rpx;
  border-radius: 10px;
  text-align:justify;
  border: 1px #c1c1c1 solid;
}

.userImg {
  width: 96rpx;
  height: 96rpx;
}

.userName {
  display: flex;
  flex-direction: row;
  align-content: center;
  font-size: 14px;
  text-align:justify;
  margin-left: 10px;
}

.shareButton {
  width: 90%;
  background-color: #c9f0e8;
  border-radius: 25px;
}

