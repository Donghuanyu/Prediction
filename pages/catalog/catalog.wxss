.catlogView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%; 
  border-radius: 5px;
  height: 30%; 
  margin: 15px 0 0 0;
}

.imgView {
  width: 100%;
  height: 100%;
  border-radius: 5px;
  /* opacity: 0.6; */
  /* filter:alpha(opacity=60); */
}

.formView {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 90%;
  border-radius: 5px;
  height: 30%;
  margin: 15px 0 0 0;
}

.buttonRoad {
  width: 100%;
  height: 100%;
  line-height: 100%;
  border-radius: 5px;
  color: transparent;
}

.rootView {
  width: 100%;
  position: fixed;
  overflow-y: scroll;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}