/* pages/subject/subject.wxss */

page {
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;
  height: 100%;
}

.rootView {
  background-color: #f2f2f2;
  width: 100%;
  overflow-y: scroll;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.progressView {
  width: 90%;
  margin: 16px 0 16px 0;
  font-size: 10pt;
}

.subjectView {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 90%;
  margin: 8px 0 8px 0;
  background-color: #ffffff;
  border-radius: 10px;
  color: #000000;
}

.subjectTitle {
  width: 100%;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 15px;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #c9f0e8;
  font-size: 10pt;
}

.subjectAnswer {
  width: 90%;
  display: flex;
  /* justify-content: center; */
  box-sizing: border-box; 
  padding: 15px;
  margin: 15px;
  border-radius: 10px;
  background-color: #f2f2f2;
  font-size: 10pt;
}

.subjectButton {
  width: 90%;
  display: flex;
  justify-content: center; 
  box-sizing: border-box; 
  border-radius: 5px;
  /* border: 0px solid transparent; */
  margin: 30px 0 30px 0;
  background-color: #c9f0e8;
  /* font-size: 10pt; */
}

.subjectButtonCover {
  width: 90%;
  display: flex;
  justify-content: center; 
  box-sizing: border-box; 
  border-radius: 5px;
  /* border: 0px solid transparent; */
  margin: 30px 0 30px 0;
  background-color: #95f3e0;
  /* font-size: 10pt; */
}