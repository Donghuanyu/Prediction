/* pages/showMessage/showMessage.wxss */
.root {
  width: 100%;
  padding-top: 25rpx;
  background: #f3f3f3;
  overflow-y: scroll;
}

.msgView {
  width: 100%;
  background: white; 
  display: flex;
  flex-direction: row;
  align-content: center;
  border-bottom: 1rpx #f3f3f3 solid;
}

.msgItem {
  width: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  align-content: center;
  margin: 25rpx;
}

.imgView {
  width: 56px;
  height: 56px;
}

.infoView {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 20rpx;
}