/* pages/showMessage/showMessage.wxss */

page {
  -webkit-user-select:none;
  user-select:none;
  width:100%;
  overflow-x:hidden;
  height: 100%;
}

.rootView {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #f3f3f3;
  overflow-y: scroll;
}

.rootEmptyView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: #f3f3f3;
}

.msgView {
  width: 100%;
  background: white; 
  display: flex;
  flex-direction: row;
  align-content: center;
  border-bottom: 1rpx solid #f3f3f3;
}

.msgItem {
  width: 100%;
  background: white;
  display: flex;
  flex-direction: row;
  align-content: center;
  margin: 25rpx;
}

.imgView {
  width: 56px;
  height: 56px;
}

.infoView {
  display: flex;
  flex-direction: column;
  flex: 1;
  margin-left: 20rpx;
}

.rowView {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.emptyView {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.noImgView {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 25rpx;
}

.tabView {
  width:  100%;
  height:  90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: white;
}

.tabButton {
  width:  80%;
  height:  95rpx;
  display: flex;
  flex-direction: row;
  background: white;
  justify-content: center;
  align-items: center;
}

.leftTabNormal {
  height: 80rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: black;
  background: white;
  border-left-style: solid;
  border-top-style: solid;
  border-bottom-style: solid;
  border-right-style: none; 
  border-width: 1px;
  border-color: black;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  font-size: 9pt;
}

.rightNormal {
  height: 80rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: black;
  background: white;
  border-left-style: none;
  border-top-style: solid;
  border-bottom-style: solid;
  border-right-style: solid; 
  border-width: 1px;
  border-color: black;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx;
  font-size: 9pt;
}

.leftTabSelect {
  height: 80rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: white;
  background: #c9f0e8;
  border-left-style: solid;
  border-top-style: solid;
  border-bottom-style: solid;
  border-right-style: none; 
  border-width: 1px;
  border-color: #c9f0e8;
  border-top-left-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  font-size: 9pt;
}

.rightSelect {
  height: 80rpx;
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  color: white;
  background: #c9f0e8;
  border-left-style: none;
  border-top-style: solid;
  border-bottom-style: solid;
  border-right-style: solid; 
  border-width: 1px;
  border-color: #c9f0e8;
  border-top-right-radius: 15rpx;
  border-bottom-right-radius: 15rpx; 
  font-size: 9pt;
}

.message {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}